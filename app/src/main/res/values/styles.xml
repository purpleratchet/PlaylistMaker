<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MainTitleText">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">top</item>
        <item name="android:text">@string/titleMain</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MainButtonStyle">parent="Widget.MaterialComponents.Button.UnelevatedButton"
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>/>
    </style>
    <style name="SettingsBackBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:text">@string/settings</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <style name="searchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/edit_text_rounded_bg</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
    </style>
    <style name="searchIconStyle">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:background">@drawable/edit_text_rounded_bg</item>
        <item name="android:src">@drawable/ic_search_day</item>
    </style>
    <style name="clearIconStyle">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@drawable/edit_text_rounded_bg</item>
        <item name="android:src">@drawable/ic_clear_search_day</item>
    </style>
    <style name="SettingsLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingsLayoutHeightSize</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SettingsTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SettingsImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="trackArtwork">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="trackInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="trackName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="artist_time_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="artist_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="dot_style">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_weight">0</item>
    </style>
    <style name="right_arrow">
        <item name="android:layout_width">9dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:layout_marginBottom">23dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="error_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">140dp</item>
    </style>
    <style name="error_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="error_frameLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">102dp</item>
    </style>
    <style name="RefreshBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_white</item>
        <item name="android:text">Обновить</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:background">@drawable/refresh_button</item>
    </style>
    <style name="ClearBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_white</item>
        <item name="android:text">Очистить историю</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_clear_history</item>
    </style>
    <style name="history_message_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Вы искали</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="playerBackBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="tint">@color/main_black</item>
    </style>

    <style name="playerTrackInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="layout_constraintEnd_toEndOf">@id/rightBorder</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
    </style>
    <style name="playerTrackResult">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintEnd_toEndOf">@id/rightBorder</item>
    </style>

    <style name="playerCoverTrackStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintEnd_toStartOf">@id/rightBorder</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
        <item name="layout_constraintTop_toBottomOf">@id/btnPlayerBack</item>
        <item name="layout_constraintBottom_toTopOf">@id/trackName</item>
    </style>

    <style name="playButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="layout_constraintBottom_toTopOf">@id/trackTime_field</item>
        <item name="layout_constraintEnd_toStartOf">@id/rightBorder</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
        <item name="layout_constraintTop_toBottomOf">@id/artistName</item>
    </style>

    <style name="pauseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintStart_toEndOf">@+id/btnAdd</item>
        <item name="layout_constraintEnd_toStartOf">@+id/btnFavorite</item>
        <item name="layout_constraintTop_toBottomOf">@+id/artistName</item>
        <item name="layout_constraintBottom_toTopOf">@+id/progressTime</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/ic_pause</item>
    </style>

    <style name="addButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@null</item>
        <item name="layout_constraintBottom_toTopOf">@id/trackTime_field</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
        <item name="layout_constraintTop_toBottomOf">@id/artistName</item>
        <item name="android:src">@drawable/ic_add</item>

    </style>

    <style name="favoriteButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@null</item>
        <item name="layout_constraintBottom_toTopOf">@id/trackTime_field</item>
        <item name="layout_constraintEnd_toStartOf">@id/rightBorder</item>
        <item name="layout_constraintTop_toBottomOf">@id/artistName</item>
        <item name="android:src">@drawable/ic_favorite</item>
    </style>

    <style name="disLikeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="layout_constraintStart_toEndOf">@+id/btnPlay</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@+id/artistNameResult</item>
        <item name="layout_constraintBottom_toTopOf">@+id/progressTime</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/ic_dislike</item>
    </style>
    <style name="PlaylistBtnStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    <style name="LibraryTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="LibraryContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="LibraryImageStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/ic_no_results</item>
    </style>
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabTextColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NewPlaylistButtonStyle">
        <item name="backgroundTint">@drawable/create_playlist_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyleNewPlaylist" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/main_black</item>
        <item name="android:textColor">@color/main_black</item>
    </style>

    <style name="TrackNameStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:gravity">start</item>
        <item name="layout_constraintEnd_toStartOf">@id/rightBorder</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
        <item name="layout_constraintTop_toBottomOf">@id/track_cover</item>
    </style>

    <style name="ArtistNameStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">start</item>
        <item name="layout_constraintEnd_toStartOf">@id/rightBorder</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
        <item name="layout_constraintTop_toBottomOf">@id/trackName</item>
    </style>

    <style name="TrackFieldStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>

    <style name="TrackInfoStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="layout_constraintEnd_toStartOf">@id/rightBorder</item>
    </style>

    <style name="progressTimeStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="layout_constraintBottom_toTopOf">@+id/trackTime_field</item>
        <item name="layout_constraintEnd_toStartOf">@+id/rightBorder</item>
        <item name="layout_constraintStart_toStartOf">@+id/leftBorder</item>
        <item name="layout_constraintTop_toBottomOf">@id/btnPlay</item>
        <item name="layout_constraintVertical_bias">0.0</item>
    </style>

    <style name="bottomSheetStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/main_black</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">@color/main_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:text">@string/add_playlist</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>