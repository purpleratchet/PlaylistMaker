<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/activity_text_size_big</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">16dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:shadowRadius">0</item>
    </style>
    <style name="textSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/activity_margin_start</item>
        <item name="android:layout_marginTop">@dimen/activity_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/activity_margin_end</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/activity_text_size_small</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    <style name="imageSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/activity_margin_end</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>
    <style name="editTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:shadowRadius">0</item>
    </style>
    <style name="buttonClear">
        <item name="cornerRadius">54dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>